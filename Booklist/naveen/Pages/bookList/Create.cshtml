@page
@model naveen.Pages.bookList.CreateModel

<br />
<h2 class="text-info">Create New Book</h2>
<br />
<div class="border container" style="padding:30px;">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="book1.Name"></label>
			</div>
			<div class="col-6">
				<input asp-for="book1.Name" class="form-control" />
			</div>
			<span asp-validation-for="book1.Name" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="book1.Author"></label>
			</div>
			<div class="col-6">
				<input asp-for="book1.Author" class="form-control" />
			</div>
			<span asp-validation-for="book1.Author" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="book1.ISBN"></label>
			</div>
			<div class="col-6">
				<input asp-for="book1.ISBN" class="form-control" />
			</div>
			<span asp-validation-for="book1.ISBN" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-3 offset-3">
				<input type="submit" value="Create" class="btn btn-primary form-control"/>
			</div>
			<div class="col-3">
				<a asp-page="Index" class="btn btn-success form-control">Back to List</a>
			</div>
		</div>
	</form>
</div>
@section Scripts{
	<partial name="_ValidationScriptsPartial"/>
}